Programa mayorDeEdad;

Variables
    edad : Entero;
    aux : Caracter;
    res : Caracter;

Caracter Funcion esMayor(input : Entero){
    Si (input >= 18) Entonces {
        Regresa('S');
    }
    Sino {
        Regresa('N');
    }
}

Principal() {
    Leer(edad);
    Escribir(edad);

    aux = esMayor(edad);
    Mientras (aux == 'N') Hacer {
        Escribir("No eres mayor... otra vez...");
        Leer(edad);
        aux = esMayor(edad);
    }

    Escribir("Lo lograste");
}